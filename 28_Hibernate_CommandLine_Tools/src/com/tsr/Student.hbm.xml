<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.tsr.Student" table="student">
		<id name="studentId">
			<column name="studentId" sql-type="integer"/>
		</id>
		<property name="name"/>
		<property name="joiningDate" column="joining_Date"/>
		<property name="grade"/>
		<property name="classTeacher" column="class_teacher"></property>
	</class>
</hibernate-mapping>