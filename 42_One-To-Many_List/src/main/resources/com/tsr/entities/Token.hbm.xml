<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="com.tsr.entities.Token" table="token">
		<id name="tokenNo" column="token_no">
			<generator class="increment"/>
		</id>
		<property name="customerName" column="customer_no"/>
		<property name="mobileNo" column="mobile_no"/>
		<property name="problem"/>
		<property name="serviceType" column="service_type"/>
		<property name="tokenIssuedDate" column="token_Issued_Date"/>
	</class>
</hibernate-mapping>